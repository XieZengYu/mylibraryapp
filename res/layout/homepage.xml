<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <TextView
        android:id="@+id/text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="2dp"
        android:background="#18B4ED"
        android:gravity="center"
        android:height="50dp"
        android:text="广东第二师范学院图书馆"
        android:textColor="#FFFFFF"
        android:textSize="24sp" />
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="5dp">
        <!-- the first row -->
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:layout_marginBottom="5dp"
	         >
	        <ImageButton 
	            android:id="@+id/btn1"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_weight="2.05"
	            android:minHeight="110dp"
	            android:background="@drawable/btn1"/>
	        <ImageView 
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_weight="0.05"
	            android:background="#ccc"/>
	        <ImageButton 
	            android:id="@+id/btn2"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:minHeight="110dp"
	            android:background="@drawable/btn2"/>
	    </LinearLayout>
	    <!-- the second row -->
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:layout_marginBottom="5dp">
	        <ImageButton 
	            android:id="@+id/btn3"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:minHeight="110dp"
	            android:background="@drawable/btn4"/>
	        <ImageView 
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_weight="0.05"
	            android:background="#ccc"/>
	        <ImageButton 
	            android:id="@+id/btn4"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:minHeight="110dp"
	            android:background="@drawable/btn5"/>
	        <ImageView 
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_weight="0.05"
	            android:background="#ccc"/>
	        <ImageButton 
	            android:id="@+id/btn5"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:minHeight="110dp"
	            android:background="@drawable/btn6"/>
	    </LinearLayout>
	    <!-- the third row -->
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:layout_marginBottom="5dp"
	         >
	        <ImageButton 
	            android:id="@+id/btn6"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:minHeight="110dp"
	            android:background="@drawable/btn7" />
	        <ImageView 
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_weight="0.05"
	            android:background="#ccc"/>
	        <ImageButton 
	            android:id="@+id/btn7"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_weight="2.05"
	            android:minHeight="110dp"
	            android:background="@drawable/btn3"/>
	    </LinearLayout>    
	    <!-- the fourth row -->
		<LinearLayout 
		    android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:layout_marginBottom="5dp">
	        <ImageButton
	            android:id="@+id/btn8" 
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:minHeight="110dp"
	            android:background="@drawable/btn8"/>
	        <ImageView 
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_weight="0.05"
	            android:background="#ccc"/>
	        <ImageButton 
	            android:id="@+id/btn9"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:minHeight="110dp"
	            android:background="@drawable/btn9"/>
	        <ImageView 
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_weight="0.05"
	            android:background="#ccc"/>
	        <ImageButton 
	            android:id="@+id/btn10"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:minHeight="110dp"
	            android:background="@drawable/btn10"/>
	    </LinearLayout>
	</LinearLayout>
</LinearLayout>

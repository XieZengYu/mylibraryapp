<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#18B4ED" >
	<ImageView 
	    android:id="@+id/touxiang1"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:background="@drawable/touxiang"
	    android:layout_centerHorizontal="true"
	    android:layout_margin="20dp"/>
	<TextView 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:text="未登录"
	    android:textColor="#ffffff"
	    android:textSize="20sp"
	    android:layout_below="@id/touxiang1"
	    android:gravity="center"
	    />
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:background="#eeeeee">
        <View 
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#696969" />
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageButton 
                android:id="@+id/shoucang"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="110dp"
                android:background="@drawable/shoucan"/>
            <View 
		        android:layout_width="0.1dp"
		        android:layout_height="match_parent"
		        android:background="#696969" />
            <ImageButton
                android:id="@+id/jieyue" 
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="110dp"
                android:background="@drawable/jieyue"/>
            <View 
		        android:layout_width="0.1dp"
		        android:layout_height="match_parent"
		        android:background="#696969" />
            <ImageButton 
                android:id="@+id/xiugai"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="110dp"
                android:background="@drawable/xiugai"/>
        </LinearLayout>
        <View 
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#696969" />
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageButton 
                android:id="@+id/yuyue"
                android:layout_width="0dp"
                android:layout_height="110dp"
                android:layout_weight="1"
                android:maxHeight="50dp"
                android:background="@drawable/yuyue"/>
            <View 
		        android:layout_width="0.1dp"
		        android:layout_height="match_parent"
		        android:background="#696969" />
            <ImageButton 
                android:id="@+id/yijian"
                android:layout_width="0dp"
                android:layout_height="110dp"
                android:layout_weight="1"
                android:maxHeight="50dp"
                android:background="@drawable/yijian"/>
            <View 
		        android:layout_width="0.1dp"
		        android:layout_height="match_parent"
		        android:background="#696969" />
            <ImageButton 
                android:id="@+id/lixian"
                android:layout_width="0dp"
                android:layout_height="110dp"
                android:layout_weight="1"
                android:maxHeight="50dp"
                android:background="@drawable/lixian"/>
        </LinearLayout>
        <View 
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#696969" />
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageButton 
                android:id="@+id/shezhi"
                android:layout_width="0dp"
                android:layout_height="110dp"
                android:layout_weight="1"
                android:maxHeight="50dp"
                android:background="@drawable/shezhi"/>
            <View 
		        android:layout_width="0.1dp"
		        android:layout_height="match_parent"
		        android:background="#696969" />
            <ImageButton 
                android:id="@+id/huancun"
                android:layout_width="0dp"
                android:layout_height="110dp"
                android:layout_weight="1"
                android:maxHeight="50dp"
                android:background="@drawable/huancun"/>
            <View 
		        android:layout_width="0.1dp"
		        android:layout_height="match_parent"
		        android:background="#696969" />
            <ImageButton 
                android:id="@+id/women"
                android:layout_width="0dp"
                android:layout_height="110dp"
                android:layout_weight="1"
                android:maxHeight="50dp"
                android:background="@drawable/women"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
